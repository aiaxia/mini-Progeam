.series{
    background: #F6F6F6;
}
.itembox{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    background: white;
    padding-bottom: 30rpx;
}
.item{
    text-align: center;
    font-size: 34rpx;
    color: rgba(34,34,34,0.86);
    letter-spacing: 0;
    text-align: center;
    width: 212rpx;
    line-height: 36px;
    margin-top: 24rpx;
    border: 1rpx solid #ddd;
    border-radius: 3px;
}
.item:hover{
    background: rgba(189, 8, 28, .1);
}
.hidden{
    visibility: hidden;
}
.series>p{
    display: block;
    font-size: 16px;
    color: #222222;
    letter-spacing: -0.38px;
    padding: 0 20rpx 20rpx 16rpx;
    background: white;
}
div{
    font-size: 13px;
    color: #696969;
    letter-spacing: -0.31px;
    line-height: 28px;
    padding: 0 20rpx;
}
.seriesbox{
    background: white;
}
.seriesitem{
    font-size: 17px;
    color: #222222;
    letter-spacing: -0.41px;
    line-height: 22px;
    line-height: 44px;
    padding: 0 20rpx;
    border-bottom: 1px solid #ddd;
}