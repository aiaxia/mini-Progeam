@import '../../iconfont.wxss';
.selectbox{
    /* text-align: center; */
}
.selectbox .top1{
    text-align: center;
    font-size: 12px;
    width: 100%;
    height: 143px;
    padding-top: 57px;
    background: rgba(221, 219, 219,.5); 
}
.selectbox .top1 text{
    font-weight: bold;
    color: #BD081C;
    font-size: 28px;
    margin-right: 3px;
}
.selectbox .middle{
    width: 80%;
    height: 336px;
    margin: 0 auto;
    margin-top: -62px;
    padding: 0 5%;
    background: white;
    border-radius: 3px;
    box-shadow: 0 0 30px #ccc;
}
.title{
    font-size: 20px;
    color: #222222;
    letter-spacing: 0.2px;
    text-align: center;
    line-height: 42.67px;
    padding: 13px 0;
    border-bottom: 1px solid #ddd;
}
.section{
    line-height: 44px;
    font-size: 15px;
    color: #222222;
    letter-spacing: 0.75px;
    line-height: 42.67px;
    border-bottom: 1px solid #ddd;
}
.section .picker{
    display: flex;
}
.section .picker view{
    font-size: 16px;
    flex: 1;
}
.section .picker .con{
    text-align: right;
}
i{
    color: #666;
}
.section .picker span{
    display: inline-block;
    vertical-align: middle;
    color: #BD081C;
    margin-right: 2px;
}
.section .picker view input{
    text-align: right;
    height: 42px;
    line-height: 42px;
    padding-right: 10%;
}
button{
    color: white;
    background: #BD081C;
    border-radius: 3px;
    margin: 5%;
}
.bottom{
    text-align: center;
}
.bottom span{
    font-size: 11px;
    color: rgba(153,153,153,0.86);
    letter-spacing: 0;
    text-align: center;
}