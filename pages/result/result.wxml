<view class= "main">
  <view class="car">
      <view class="car-left">
        <image style="width: 118px; height: 80px; background-color: #eeeeee;" mode="{{img.mode}}" src="{{img.src}}"></image>
      </view>
      <view class="car-right">
          <view class="car-right-top">{{car.brandName}} {{car.seriesName}}</view>
          <view class="car-right-middle">{{car.firstLicenseTime}} <text>|</text> {{car.licenseCity}} <text>|</text> {{car.mileage}}万公里</view>
          <view class="car-right-bottom">新车含税价：{{originalPrice}}万</view>
      </view>
  </view>
  <view class="price">
      <view class="price-title">参考价格</view>
      <view class="price-content">
        <view class="price-content-btn">
          <button id="1" class="{{curIndex=='1'? 'price-active' : ''}}" bindtap="toggleTab">车况一般</button>
          <button id="2" class="{{curIndex=='2'? 'price-active' : ''}}" bindtap="toggleTab">车况良好</button>
          <button id="3" class="{{curIndex=='3'? 'price-active' : ''}}" bindtap="toggleTab">车况优秀</button>
        </view>
        <view class="price-content-box">
          <view>参考价格 | {{minPrice}}~{{maxPrice}} <span>万元</span></view>
          <view class="price-content-box-tip">大量相同车型成交数据对比分析，结合评估价微调得出参考价格</view>
        </view>
      </view>
  </view>
  <view class="rank">
      <view class="rank-title">
      <view>保值率排行</view>
      <view class="rank-title-right">该车在上牌城市车型中的保值率排行</view>
      </view>
      <view class="container">
          <ec-canvas id="rank-mychart-dom-line" canvas-id="rank-mychart-line" ec="{{ecrank}}"></ec-canvas>
      </view>
  </view>
  <view class="future">
      <view class="future-title">新车未来5年估值</view>
      <view class="container">
          <ec-canvas id="future-mychart-dom-line" canvas-id="future-mychart-line" ec="{{ fetruerank }}"></ec-canvas>
      </view>
      <button bindtap="submit">查看精准报价</button>
  </view>
