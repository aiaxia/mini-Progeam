
@import '../../iconfont.wxss';
.main  {
    background-color: rgba(221, 219, 219,.5);
    font-size: 30rpx;
}
.main>view {
    margin-bottom: 20px;
    padding: 32rpx;
    background-color: #fff;
}
.car {
    display: flex;
    justify-content: space-between;
}
.car .car-right {
    flex: 1;
}
.car .car-right {
    flex: 2;
    padding-left: 40rpx;
}
.car .car-right .car-right-top {
    
}
.car .car-right .car-right-middle,
.car .car-right .car-right-bottom {
    font-size: 24rpx;
    margin-top: 3px;
}

/* 参考价格 */
.price .price-content-btn {
    display: flex;
    margin: 16px 0px;
}
.price .price-content-btn button {
    width: 212rpx;
    height: 36px;
    text-align: center;
    line-height: 36px;
    color: rgba(34,34,34,0.40);
    font-size: 30rpx;
}
.price .price-content-box {
    background: rgba(255,255,255,0.10);
    box-shadow: 0 0 8px 0 rgba(253,10,61,0.10);
    border-radius: 3px;
    padding: 32rpx;
    text-align: center;
}

.price .price-content-box .price-content-box-tip {
    font-size: 20rpx;
    color: #999999;
    margin-top: 8px;
}

/* 保值率排行 */
.rank {
    height: 140px;
}
.rank .rank-title {
    display: flex;
    justify-content: space-between;
}
.rank .rank-title .rank-title-right {
    font-size: 20rpx;
    color: #999999;
    line-height: 42rpx;
}
.rank .container {
    width: 280rpx;
    margin: 0 auto;
}
ec-canvas {
    width: 100%;
    height: 100%;
  }

/* 未来5年估值 */
.futrue {
    height: 375px;
}

.futrue .container {
    width: 640rpx;
    margin: auto;
}

/* 查看精准报价 */
.info {
    height: 300px;
}
.info .info-content {
    background-color: #F0F0F0;
    border-radius: 3px;
    padding: 0 40rpx;
    margin-top: 17px;
}
.info .info-content .info-content-name{
    height: 40px;
    border-bottom: 1px solid #fff;
    line-height: 40px;
    margin: auto;
}
.info .info-content .info-content-mobile{
    height: 40px;
    border-bottom: 1px solid #fff;
    line-height: 40px;
    margin: auto;
}
.info .info-content .info-content-name input,
.info .info-content .info-content-mobile input {
    line-height: 40px;
    height: 40px;
}

.info .info-content .info-content-code{
    display: flex;
    justify-content: space-between;
    height: 40px;
    border-bottom: 1px solid #fff;
    line-height: 40px;
    margin: auto;
}

.info .info-content .info-content-code a{
    font-size: 26rpx;
    color: #007AFF;
    text-align: right;
    /* width: 160px; */
}

.info button{
    margin-top: 32px;
    background: #BD081C;
    border-radius: 3px;
    height: 96rpx;
    width: 686rpx;
    color: #fff;
    line-height: 96rpx;
}





